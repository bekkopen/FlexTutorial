<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/halo" minWidth="1024" minHeight="768">
	<fx:Declarations>
		<s:ArrayCollection id="contacts">
			<fx:Object label="Ole Christian: 98219000" />
			<fx:Object label="Christian: 98219007" />
			<fx:Object label="Mikael: 98219009" />
		</s:ArrayCollection>
	</fx:Declarations>
	
	<s:HGroup width="100%" height="100%">
		<s:Panel width="100%" height="100%" title="Contacts">
			<s:List dataProvider="{contacts}" width="100%" height="100%"/>
		</s:Panel>
		
		<s:Panel width="100%" height="100%" title="New contact">
			<s:VGroup width="100%" height="100%" horizontalAlign="center" paddingTop="10">
				<s:HGroup>
					<s:Label text="Name" width="100" />
					<s:TextInput width="200" />
				</s:HGroup>
				<s:HGroup>
					<s:Label text="Number" width="100" />
					<s:TextInput width="200" />
				</s:HGroup>
				<s:HGroup>
					<s:Label text="Sex" width="100" />
					<s:DropDownList width="200">
						<s:ArrayCollection>
							<fx:Object data="0" label="Male" />
							<fx:Object data="1" label="Female" />							
						</s:ArrayCollection>
					</s:DropDownList>
				</s:HGroup>
			</s:VGroup>
		</s:Panel>
	</s:HGroup>
</s:Application>