<?xml version="1.0"?>
<mx:Panel
        xmlns:mx="http://www.adobe.com/2006/mxml"
        title="Congratulations you're logged in!" xmlns:boxes="views.boxes.*">

    <mx:Metadata>
        [Event(name="doLogout", type="flash.events.Event")]
    </mx:Metadata>


    <mx:Tile direction="horizontal" tileHeight="230" tileWidth="300" >
    	<boxes:LorumTextPanel width="100%" height="100%" />
    	<boxes:CompanyMessagesPanel width="100%" height="100%"/>
    	<boxes:DeathStar width="100%" height="100%"/>
    	<boxes:SomeGraphPic width="100%" height="100%"/>
    </mx:Tile>
    <mx:ControlBar width="100%" horizontalAlign="right">
        <mx:Button label="Logout" click="logout()"/>
    </mx:ControlBar>

    <mx:Script><![CDATA[
        private function logout():void {
            dispatchEvent(new Event("doLogout"));
        }
    ]]></mx:Script>

</mx:Panel>
