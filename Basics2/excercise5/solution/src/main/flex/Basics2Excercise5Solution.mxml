<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml"
                width="700" height="700"
                horizontalScrollPolicy="off"
                xmlns:views="views.*"
                horizontalAlign="center"
        >

    <mx:WipeUp id="wipeOut" duration="500"/>
    <mx:WipeDown id="wipeIn" duration="700"/>

    <mx:ViewStack id="viewStack" width="100%" height="100%">
        <views:LoginPanel id="loginForm" doLogin="showLoggedInPane()" height="230" width="320" showEffect="wipeIn" hideEffect="wipeOut"/>
        <views:LoggedInPanel id="loginPane" doLogout="showLoginForm()" height="100%" width="100%" showEffect="wipeIn" hideEffect="wipeOut"/>
    </mx:ViewStack>

    <mx:Script>
    <![CDATA[
        private function showLoggedInPane():void {
            viewStack.selectedChild = loginPane;
        }

        private function showLoginForm():void {
            viewStack.selectedChild = loginForm;
        }

    ]]>
    </mx:Script>

</mx:Application>
